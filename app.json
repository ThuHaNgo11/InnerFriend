{
  "expo": {
    "name": "InnerFriend",
    "slug": "InnerFriendClientV2",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.jpeg",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/journaling.avif",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.thuhango.InnerFriendClientV2"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.ACCESS_MEDIA_LOCATION"
      ]
    },
    "scheme": "InnerFriendClient_scheme",
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow InnerFriend to access your photo library."
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Allow $(name) to access your photos.",
          "savePhotosPermission": "Allow $(name) to save photos.",
          "videosPermission": "Allow $(name) to access your videos.",
          "isAccessMediaLocationEnabled": true
        }
      ],
      [
        "expo-font",
        {
          "fonts": [
            "node_modules/@expo-google-fonts/nunito-sans/NunitoSans_400Regular.ttf"
          ]
        }
      ],
      [
        "@react-native-voice/voice",
        {
          "microphonePermission": "Allow InneFriend to access the microphone",
          "speechRecognitionPermission": "Allow InneFriend to securely recognize user speech"
        }
      ],
      [
        "expo-dev-launcher",
        {
          "launchMode": "most-recent"
        }
      ]
    ],
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "d31bfac6-2ad8-416b-b0f4-de163e4c1c57"
      }
    }
  }
}
